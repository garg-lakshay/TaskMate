{
  "compilerOptions": {
    "target": "ES2020",
    "module": "COmmonJS",
    "moduleResolution": "node",
    
    "rootDir": "./src",
    "outDir": "./dist",

    "lib": ["ESNext"],
    "types": ["node"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
